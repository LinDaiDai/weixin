/**app.wxss**/
@import "./assets/font/font.wxss";
page{
  height: 100%;
}
.header{
  height:100rpx;
  width:100%;
  background:#00BFFF;
  display:flex;
  flex-direction:row;
  align-items:center;
  position: absolute;
  top: 0;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}
.content{
  position: absolute;
  left: 0px;
  width: 100%;
  height: 100%;
  overflow: scroll;
}
.clear::after{
  display: block;
  content: "";
  clear: both;
}