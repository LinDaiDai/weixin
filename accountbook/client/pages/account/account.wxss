.container{
  position: relative;
  height: 100%;
}
.headerTab{
  margin: 0 auto;
  width: 500rpx;
  height: 60rpx;
  border: 1px solid #fff;
  border-radius: 6rpx;
  color: #fff;
  display: flex;
  flex-wrap: nowrap;
  justify-content: center;
  box-sizing: border-box;
  text-align:center;
  line-height: 58rpx;
}
.headerItem{
  width: 250rpx;
  font-size:30rpx;
  transition: all 0.3s;
}
.headerItem:first-child{
  border-right: 1px solid #fff;
}
.headerItem.active{
  background-color:#fff;
  color:#00BFFF;
}
.content{
  top: 100rpx;
}
.typeList{
  padding: 60rpx;
  box-sizing: border-box;
  padding-bottom:160rpx;
}
.typeItem{
  width:140rpx;
  height:200rpx;
  text-align:center;
  margin-right:20rpx;
  margin-bottom: 20rpx;
  float:left;
}
.typeItem:nth-child(4n) {
  margin-right: 0rpx;
}
.typeIconfont{
  width:140rpx;
  height:140rpx;
  line-height:140rpx;
  background-color:#eee;
  border-radius:50%;
  transition:all 0.3s;
}
.typeIconfont.active{
  background-color:#00BFFF;
}
.typeLabel{
  height: 60rpx;
  font-size:27rpx;
  padding-top:15rpx;
}
